@model List<KeepTrack.Models.Bill>

@{
    Layout = "_Layout";
}
@{
    ViewBag.Title = "Contas";
}

<a href="/bill/create" class="btn btn-primary">Nova Conta</a>
<span><b>Total de contas: </b>@Model.Count</span>
<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Criador</th>
            <th scope="col">Credor</th>
            <th scope="col">Devedor</th>
            <th scope="col">Valor</th>
            <th scope="col">Descrição</th>
            <th scope="col">Data do pagamento</th>
            <th scope="col">Vencimento</th>
            <th scope="col">Situação</th>
            <th scope="col">Criada em:</th>
            <th scope="col">Ação</th>





        </tr>
    </thead>
    <tbody>
        @foreach (var bill in Model)
        {
        <tr>
            <th scope="row">@bill.BillId</th>
            <td>@bill.UserId</td>
            <td>@bill.Creditor</td>
            <td>@bill.Debtor</td>
            <td>@bill.Amount</td>
            <td>@bill.Description</td>
            <td>@bill.CreditDate</td>
            <td>@bill.DueDate</td>
            <td>@bill.isOpen</td>
            <td>@bill.Created_at</td>
            <td>
                <a href="/bill/update/@bill.BillId" class="btn btn-primary">Editar</a>
                <a href="/#/@bill.BillId" class="btn btn-primary">Excluir</a>
            </td>
        </tr>
        }
    </tbody>
</table>